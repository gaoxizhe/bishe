<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.dao.GraduateStudentDao">
    <insert id="insertGraduateStudent">
        insert into graduate_student(name, school,
                                     major, degree, admission_category,
                                     student_type, year)
        VALUES (#{name}, #{school},
                #{major}, #{degree}, #{admissionCategory},
                #{studentType}, #{year});

    </insert>
    <update id="updateGraduateStudentById">
        update graduate_student
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="school != null">
                school = #{school},
            </if>
            <if test="major != null">
                major = #{major},
            </if>
            <if test="degree != null">
                degree = #{degree},
            </if>
            <if test="admissionCategory != null">
                admission_category = #{admissionCategory},
            </if>
            <if test="studentType != null">
                student_type = #{studentType},
            </if>
            <if test="year != null">
                year = #{year},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="deleteGraduateStudentById">
        delete from graduate_student where  id = #{id}
    </delete>
    <select id="getGraduateStudentPageList" resultType="com.example.model.GraduateStudent">
        select * from graduate_student
    </select>
    <select id="getGraduateStudentById" resultType="com.example.model.GraduateStudent">
        select * from graduate_student where id = #{id}
    </select>
</mapper>